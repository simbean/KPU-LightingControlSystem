<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SubActivity_02">

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="729dp"
        android:divider="@drawable/ic_launcher_background"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7B68EE"
            android:fontFamily="@font/jalnan"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="수동 설정" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch5"
                android:layout_width="319dp"
                android:layout_height="54dp"
                android:layout_marginLeft="12dp"
                android:fontFamily="@font/jalnan"
                android:text="수동설정 활성화"
                android:textColor="#000000"
                android:trackTint="#000000" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginLeft="13dp"
                android:onClick="onClickMode"
                android:layout_marginRight="7dp"
                android:layout_weight="1"
                android:background="#7B68EE"
                android:text="저장"
                android:fontFamily="@font/jalnan"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="TextView"
            android:fontFamily="@font/jalnan"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="236dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="205dp"
                android:layout_height="235dp"
                android:layout_marginLeft="3dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic[17]" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="205dp"
                android:layout_height="235dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="커튼 설정"
            android:fontFamily="@font/jalnan"
            android:textColor="#000000" />

        <SeekBar
            android:id="@+id/seekBar3"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:max="3"
            android:progress="0"
            android:progressDrawable="@drawable/seek_seekbar1"
            android:thumb="@drawable/seekbar_seekbar1_thumb" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/jalnan"
            android:text="조명 설정"
            android:textColor="#000000" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:max="3"
            android:progress="0"
            android:progressDrawable="@drawable/seek_seekbar1"
            android:thumb="@drawable/seekbar_seekbar1_thumb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="14dp"
                android:layout_weight="1"
                android:fontFamily="@font/jalnan"
                android:text="LED색상"
                android:textColor="#000000" />

            <ToggleButton
                android:id="@+id/chkState"
                android:layout_width="189dp"
                android:layout_height="37dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="15dp"
                android:textOff="COOL"
                android:textOn="WARM"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
