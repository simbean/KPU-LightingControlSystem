<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#FFFFFF"
    tools:context=".SubActivity_01">

    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="702dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="2dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/모드설정"
            android:layout_width="425dp"
            android:layout_height="62dp"
            android:background="#7B68EE"
            android:fontFamily="@font/jalnan"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:title="모드설정" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="389dp"
            android:layout_height="126dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/jalnan"
            android:text="Cooling"
            android:textColor="#000000"
            android:textSize="15dp"
            android:trackTint="#000000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="집중하거나 일을할때 적절한 모드입니다."
            android:textColor="#000000" />

        <Switch
            android:id="@+id/switch2"
            android:layout_width="389dp"
            android:layout_height="146dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/jalnan"
            android:text="care"
            android:textColor="#000000"
            android:textSize="15dp"
            android:trackTint="#000000" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="거실이나 일반적인 상황에 적절한 모드입니다."
            android:textColor="#000000" />

        <Switch
            android:id="@+id/switch3"
            android:layout_width="389dp"
            android:layout_height="116dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/jalnan"
            android:text="Healing"
            android:textColor="#000000"
            android:textSize="15dp"
            android:trackTint="#000000" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="침실 등 휴식을 취할때 적절한 모드입니다."
            android:textColor="#000000" />

        <Switch
            android:id="@+id/switch4"
            android:layout_width="389dp"
            android:layout_height="134dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/jalnan"
            android:text="Sleep"
            android:textColor="#000000"
            android:textSize="15dp"
            android:trackTint="#000000" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="잠을 잘때 이용하는 모드입니다."
            android:textColor="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>